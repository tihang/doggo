                    <br>
                    <time class="is-pulled-right" datetime="2016-1-1">11:09 PM - 1 Jan 2016</time>
                </div>
            </div>


            <hr>
            <div class="card-content pl-0">
                <div class="content">
                    <div class="media">
                        <%# Commenter photo %>
                        <div class="media-left m-0">
                            <figure class="image is-48x48">
                            <img src="https://bulma.io/images/placeholders/96x96.png" alt="Placeholder image">
                            </figure>
                        </div>

                        <%# Comment details %>
                        <div class="media-content" >        
                            <h5>Leave a comment</h5>
                            <%= form_with do |f| %>
                                <div class="field">
                                    <div class="control">
                                        <%= f.text_area :comment, class:"textarea", placeholder: "Write a comment" %>
                                    </div>
                                </div>
                                
                                <div class="control">
                                    <%= f.submit "Post", class: "button is-primary is-pulled-right" %>
                                </div>
                            <% end %>                    
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>